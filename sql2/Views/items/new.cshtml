@model items
@{
    ViewData["Title"] = "New";
 }

<form method    ="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 clas="text-primary ">Add New Item</h2>
            <hr>
        </div>
        <div asp-validation-summary="All"></div>
        <div class ="mb-3">
            <label asp-for="name"></label>
            <input asp-for="name" class="form-control"/>
            <span asp-validation-for="name" class="text-danger"></span>
        </div>
                <div class ="mb-3">
            <label asp-for="price"></label>
            <input asp-for="price" class="form-control"/>
            <span asp-validation-for="price" class="text-danger"></span>
        </div>
        <button type="submit" class = "btn btn-primary" style="width: 150px;"> Add</button>
        <a asp-action="Index" asp-controller="Items" class="btn -btn-secondry " style="width: 150px;"> Back to items</a>
    </div>
</form> 